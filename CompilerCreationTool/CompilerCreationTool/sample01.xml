<Language>
    <Grammar>
        <Production left="S">
            <Symbol name="Int" type="Nonterminal"/>
            <Symbol name="Plus" type="Terminal"/>
            <Symbol name="Int" type="Nonterminal" attribute="CreateBinaryPlus"/>
            <Symbol name="EOF" type="Terminal"/>
        </Production>
        <Production left="S">
            <Symbol name="Float" type="Nonterminal"/>
            <Symbol name="Minus" type="Terminal"/>
            <Symbol name="Float" type="Nonterminal" attribute="CreateBinaryMinus"/>
            <Symbol name="EOF" type="Terminal"/>
        </Production>
        <Production left="Int">
            <Symbol name="Integer" type="Terminal" attribute="CreateInteger"/>
        </Production>
        <Production left="Float">
            <Symbol name="Float" type="Terminal" attribute="CreateFloat"/>
        </Production>
    </Grammar>
    <Patterns>
        <Pattern name="Plus" origin="\+" isEnding="false"/>
        <Pattern name="EOF" origin="EOF" isEnding="true"/>
        <Pattern name="Minus" origin="\-" isEnding="false"/>
        <Pattern name="Float" origin="(0|[1-9])\.[0-9]+" isEnding="false"/>
        <Pattern name="Integer" origin="0|[1-9][0-9]*" isEnding="false"/>
    </Patterns>
    <Actions>
        <Action name="CreateBinaryPlus" type="CreateBinaryPlusNode"/>
        <Action name="CreateBinaryMinus" type="CreateBinaryMinusNode"/>
        <Action name="CreateInteger" type="CreateIntegerNumberNode"/>
        <Action name="CreateFloat" type="CreateFloatNumberNode"/>
    </Actions>
</Language>
